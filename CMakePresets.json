{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "toolchainFile": "$env{VCPKG_INSTALLATION_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": false,
        "MIRACLE_BUILD_DEMO_PROJECTS": true
      }
    },
    {
      "name": "x64-debug",
      "displayName": "x64 Debug",
      "inherits": "base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static-md"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64-release",
      "displayName": "x64 Release",
      "inherits": "x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "macos-debug",
      "displayName": "Mac OS Debug",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-osx"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "macos-release",
      "displayName": "Mac OS Release",
      "inherits": "macos-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "inherits": "linux-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-ci",
      "displayName": "Windows CI",
      "inherits": "x64-release",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": true
      }
    },
    {
      "name": "macos-ci",
      "displayName": "Mac OS CI",
      "inherits": "macos-release",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": true
      }
    },
    {
      "name": "linux-ci",
      "displayName": "Linux CI",
      "inherits": "linux-release",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": true
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-ci-build",
      "displayName": "Windows CI Build",
      "configurePreset": "windows-ci",
      "configuration": "Release"
    },
    {
      "name": "macos-ci-build",
      "displayName": "Mac OS CI Build",
      "configurePreset": "macos-ci",
      "configuration": "Release"
    },
    {
      "name": "linux-ci-build",
      "displayName": "Linux CI Build",
      "configurePreset": "linux-ci",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "windows-ci-tests",
      "displayName": "Windows CI Tests",
      "configurePreset": "windows-ci",
      "configuration": "Release"
    },
    {
      "name": "macos-ci-tests",
      "displayName": "Mac OS CI Tests",
      "configurePreset": "macos-ci",
      "configuration": "Release"
    },
    {
      "name": "linux-ci-tests",
      "displayName": "Linux CI Tests",
      "configurePreset": "linux-ci",
      "configuration": "Release"
    }
  ]
}
