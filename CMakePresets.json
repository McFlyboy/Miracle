{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "toolchainFile": "$env{VCPKG_INSTALLATION_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "MIRACLE_BUILD_DEMO_TARGETS": true
      }
    },
    {
      "name": "x64-debug",
      "displayName": "x64 Debug",
      "inherits": "base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static-md"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64-release",
      "displayName": "x64 Release",
      "inherits": "x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "macos-debug",
      "displayName": "Mac OS Debug",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-osx"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "macos-release",
      "displayName": "Mac OS Release",
      "inherits": "macos-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release",
      "inherits": "linux-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "x64-release-build",
      "displayName": "x64 Release Build",
      "configurePreset": "x64-release",
      "configuration": "Release"
    },
    {
      "name": "macos-release-build",
      "displayName": "Mac OS Release Build",
      "configurePreset": "macos-release",
      "configuration": "Release"
    },
    {
      "name": "linux-release-build",
      "displayName": "Linux Release Build",
      "configurePreset": "linux-release",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "x64-release-tests",
      "displayName": "Windows Release Tests",
      "configurePreset": "x64-release",
      "configuration": "Release"
    },
    {
      "name": "macos-release-tests",
      "displayName": "Mac OS Release Tests",
      "configurePreset": "macos-release",
      "configuration": "Release"
    },
    {
      "name": "linux-release-tests",
      "displayName": "Linux Release Tests",
      "configurePreset": "linux-release",
      "configuration": "Release"
    }
  ]
}
