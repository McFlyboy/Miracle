{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "toolchainFile": "$env{VCPKG_INSTALLATION_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "MIRACLE_BUILD_SHARED": false,
        "MIRACLE_BUILD_DEMO_PROJECTS": true
      }
    },
    {
      "name": "x64-debug",
      "displayName": "x64 Debug",
      "inherits": "base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_TARGET_TRIPLET": "x64-windows-static"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64-release",
      "displayName": "x64 Release",
      "inherits": "x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-ci",
      "displayName": "Windows CI",
      "inherits": "x64-release",
      "generator": "Visual Studio 17 2022",
      "cacheVariables": {
        "MIRACLE_BUILD_SHARED": true
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-ci-build",
      "displayName": "Windows CI Build",
      "configurePreset": "windows-ci",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "windows-ci-tests",
      "displayName": "Windows CI Tests",
      "configurePreset": "windows-ci",
      "configuration": "Release"
    }
  ]
}
